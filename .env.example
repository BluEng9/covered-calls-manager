# ============================
# Covered Calls Manager
# Environment Variables Template
# ============================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# Interactive Brokers Configuration
# ----------------------------------
IBKR_HOST=127.0.0.1
IBKR_PORT=7497  # 7497 for paper trading, 7496 for live trading
IBKR_CLIENT_ID=1
IBKR_READONLY=true  # Set to false for live trading

# Deribit Configuration (Optional)
# ---------------------------------
DERIBIT_ENV=test  # 'test' for testnet, 'prod' for mainnet
DERIBIT_CLIENT_ID=your_client_id_here
DERIBIT_CLIENT_SECRET=your_client_secret_here
DERIBIT_SIMULATED=true  # true for simulated trading

# Trading Risk Limits
# -------------------
MAX_POSITION_SIZE_USD=10000
MAX_DAILY_LOSS_USD=500
MAX_TOTAL_PORTFOLIO_RISK_PERCENT=5.0

# Notification Settings (Optional)
# ---------------------------------
ENABLE_EMAIL_NOTIFICATIONS=false
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here

# Telegram Notifications (Optional)
# ----------------------------------
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Application Settings
# --------------------
DEBUG_MODE=true
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
TIMEZONE=America/New_York

# Database
# --------
DATABASE_PATH=./trades.db

# Streamlit Configuration
# ------------------------
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_HEADLESS=false
